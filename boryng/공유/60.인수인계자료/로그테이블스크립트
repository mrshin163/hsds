

CREATE TABLE "EACCOUNTING"."BREAS_LOG"
(
  "SEQ"            NUMBER NOT NULL,
  "C_CD"           VARCHAR2(10) NOT NULL,
  "EMP_ID"         VARCHAR2(10) NOT NULL,
  "EMP_NM"         VARCHAR2(30),
  "MENU_DEPTH1"    VARCHAR2(2),
  "MENU_DEPTH2"    VARCHAR2(2),
  "MENU_NAME"      VARCHAR2(300),
  "LOG_URL"        VARCHAR2(1000),
  "LOG_IP"         VARCHAR2(50),
  "LOG_REGDATE"    DATE DEFAULT SYSDATE -- 등록시간,
  "LOG_USERAGENT"  VARCHAR2(1000),
  "DIVISION_CODE"  VARCHAR2(100),
  "DIVISION_NAME"  VARCHAR2(100),
  "POSITION"       VARCHAR2(100),
  "CALLNAME"       VARCHAR2(100),
  "OFFICE"         VARCHAR2(100),
  "HANDPHONE"      VARCHAR2(100)
);

CREATE UNIQUE INDEX "EACCOUNTING"."PK_BREAS_LOG"
   ON "BREAS_LOG"("SEQ")
TABLESPACE TS_BORYUNGEHR
PCTFREE 10
INITRANS 2
MAXTRANS 255
STORAGE (
  INITIAL 65536
  MINEXTENTS 1
  MAXEXTENTS UNLIMITED
  FREELISTS 1
  FREELIST GROUPS 1
  BUFFER_POOL DEFAULT
);


ALTER TABLE "BREAS_LOG"
ADD CONSTRAINT "PK_BREAS_LOG" 
PRIMARY KEY("SEQ");



COMMENT ON TABLE "EACCOUNTING"."BREAS_LOG" IS 'BREAS 로그' ;

COMMENT ON COLUMN "EACCOUNTING"."BREAS_LOG"."CALLNAME" IS '호칭' ;
COMMENT ON COLUMN "EACCOUNTING"."BREAS_LOG"."C_CD" IS '회사코드' ;
COMMENT ON COLUMN "EACCOUNTING"."BREAS_LOG"."DIVISION_CODE" IS '부서코드' ;
COMMENT ON COLUMN "EACCOUNTING"."BREAS_LOG"."DIVISION_NAME" IS '부서명' ;
COMMENT ON COLUMN "EACCOUNTING"."BREAS_LOG"."EMP_ID" IS '사번' ;
COMMENT ON COLUMN "EACCOUNTING"."BREAS_LOG"."EMP_NM" IS '이름' ;
COMMENT ON COLUMN "EACCOUNTING"."BREAS_LOG"."HANDPHONE" IS '핸드폰번호' ;
COMMENT ON COLUMN "EACCOUNTING"."BREAS_LOG"."LOG_IP" IS '접속IP' ;
COMMENT ON COLUMN "EACCOUNTING"."BREAS_LOG"."LOG_REGDATE" IS '등록시간' ;
COMMENT ON COLUMN "EACCOUNTING"."BREAS_LOG"."LOG_URL" IS '접속URL' ;
COMMENT ON COLUMN "EACCOUNTING"."BREAS_LOG"."LOG_USERAGENT" IS '접속기기정보' ;
COMMENT ON COLUMN "EACCOUNTING"."BREAS_LOG"."MENU_DEPTH1" IS '메뉴DEPTH1코드' ;
COMMENT ON COLUMN "EACCOUNTING"."BREAS_LOG"."MENU_DEPTH2" IS '메뉴DEPTH2코드' ;
COMMENT ON COLUMN "EACCOUNTING"."BREAS_LOG"."MENU_NAME" IS '메뉴명(로그인,로그아웃등)' ;
COMMENT ON COLUMN "EACCOUNTING"."BREAS_LOG"."OFFICE" IS '사무실번호' ;
COMMENT ON COLUMN "EACCOUNTING"."BREAS_LOG"."POSITION" IS '직급' ;
COMMENT ON COLUMN "EACCOUNTING"."BREAS_LOG"."SEQ" IS '로그시퀀스(PRIMARY KEY)' ;
